<link rel="canonical" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.8/slick.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.8/slick-theme.min.css">
<div class="header-text">
  <h3
    class="header-slider
    {% if section.settings.title == "1" %}des1{% endif %}
    {% if section.settings.title == "2" %}des2{% endif %}
    {% if section.settings.title == "3" %}des3{% endif %}
    {% if section.settings.title == "4" %}des4{% endif %}
    {% if section.settings.title == "5" %}des5{% endif %}
    {% if section.settings.title == "6" %}des6{% endif %}
    {% if section.settings.title == "7" %}des7{% endif %}
    {% if section.settings.title == "8" %}des8{% endif %}
    {% if section.settings.title == "9" %}des9{% endif %}
    {% if section.settings.title == "10" %}des10{% endif %}
    {% if section.settings.title == "11" %}des11{% endif %}
    {% if section.settings.title == "12" %}des12{% endif %}
    {% if section.settings.title == "13" %}des13{% endif %}
    {% if section.settings.title == "14" %}des14
    {% endif %}
    {{ section.settings.heading }}</h3>

  <p
    header-slider_2
    {% if section.settings.change == "1" %}body-font{% else section.settings.change == "2" %}dody-text-font%}{% endif %}>
    {{ section.settings.sub-text }}
  </p>
</div>

{% assign collection = section.settings.collection %}
<div class="container">
  <div class="product-main carousel">
    {% for product in collections[collection].products limit: section.settings.product-number %}
      <div class="product">
        <a href="#">
          <div class="over-flow reveal">
            <img src="{{ product.featured_image.src | img_url:'master' }}" alt="{{ product.title }}">
            <img
              class="hidden"
              src="{{ product.images.last | img_url: 'master' }}"
              alt="{{ product.images.last.alt | escape }}" />
          </div>
          <h3 class="title">{{ product.title }}</h3>
          <p class="price">{{ product.price | money }}</p>

        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Section name",
    "settings": [

      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "sub-text",
        "label": "Sub Text"
      },

      {
        "type": "select",
        "id": "change",
        "label": "Sub Text use font",
        "options": [
          {
            "value": "1",
            "label": "Body font"
          }, {
            "value": "2",
            "label": "Sub Tile Font"
          }
        ],
        "default": "1"
      },
      {
        "type": "select",
        "id": "title",
        "label": "Design Title",
        "options": [
          {
            "value": "1",
            "label": "Design1"
          },
          {
            "value": "2",
            "label": "Design2"
          },
          {
            "value": "3",
            "label": "Design3"
          },
          {
            "value": "4",
            "label": "Design4"
          }, {
            "value": "5",
            "label": "Design5"
          }, {
            "value": "6",
            "label": "Design6"
          }, {
            "value": "7",
            "label": "Design7"
          }, {
            "value": "8",
            "label": "Design8"
          }, {
            "value": "9",
            "label": "Design9"
          }, {
            "value": "10",
            "label": "Design10"
          }
        ],
        "default": "1"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "collection"
      }, {
        "type": "range",
        "label": "Number of Products",
        "id": "product-number",
        "min": 1,
        "max": 20,
        "step": 1,
        "default": 6
      }
    ],
    "presets": [
      {
        "name": "open-slide"
      }
    ]
  }
{% endschema %}

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .product a {
    text-decoration: none;
  }
  .product-main {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
  }
  .header-text {
    text-align: center;
    width: 100%;
  }
  .body-font {
    font-weight: 500;
  }
  .dody-text-font {
    font-style: italic;
    font-weight: 600;
  }

  .header-slider:after,
  .header-slider:before {
    content: "";
    display: inline-block;
    width: 30px;
    height: 2px;
    background: #222;
    {% comment %}
      display: none;
    {% endcomment %}
  }
  .des2 {
    background-position: center;
    background-image: url("https://cdn.shopify.com/s/files/1/0604/7311/4856/files/svg_title.svg?v=1686722423");
    background-repeat: no-repeat;
  }
  .des3 {
    background-color: green;
  }
  .over-flow img {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  .over-flow {
    overflow: hidden;
    height: 90%;
  }
  .title {
    margin: 10px 0 0;
    font-size: 14px;
    color: #4d5959;
    font-weight: 900;
  }
  .price {
    margin: 0 0 10px;
    font-size: 14px;
  }
  .product {
    width: 33.33%;
    display: flex;
    text-align: center;
    position: relative;
    padding: 0 15px 30px;
    overflow: hidden;
    transition: 0.5s ease;

  }
  .product-info {
    margin: 10px 0 40px;
  }
  .load-more_wrap {
    display: flex;
    justify-content: center;
    margin: 0 auto;
  }

  button a {
    color: #ffff;
  }


  svg.t4s-btn-icon {
    width: 18px;
    height: 18px;
    fill: currentcolor !important;
    color: #fff;
    margin-left: 8px;
    cursor: pointer;
  }
  .color-item {
    display: inline-flex;
  }

  .t4s-pr-color__item {
    padding: 1px;
    margin: 0;
    border-color: #ddd;
    border: 1px solid #ddd;
    cursor: pointer;
    border-radius: 50%;
    width: 18px;
    vertical-align: top;
    height: 18px;
    background-color: red;
  }
  .t4s-pr-color__item:hover {
    border: 2px solid black;
  }
  span.t4s-pr-color__name {
    display: none;
  }
  .bg_color_blue {
    --t4s-bg-color: #a8bcd4;
  }
  .color-gray {
    background-color: #a8bcd4;
  }
  .color-green {
    background-color: green;
  }
  .color-pink {
    background-color: #fcc6de;
  }
  .color-yellow {
    background-color: yellow;
  }
  .product:hover .product-btns {
    display: block;
    transition: 0.5s ease;
    z-index: 99999999;
  }
  .t4s-product-btns:before {
    content: "";
    color: white;
    font-size: 30px;
    font-family: sans-serif;
    position: absolute;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 100%;
    transition: all 0.2s;
  }
  .t4s-product-btns:hover:before {
    top: 0;
  }
  .t4s-product-btns {
    position: absolute;
    /* margin-top: 130px; */
    width: 92.5%;
    height: 50px;
    bottom: 95px;
    background: #b59677;
    overflow: hidden;
    display: none;
  }
  .product:hover .t4s-product-btns {
    display: block;
    z-index: 8888;
  }
  .t4s-product-btns:hover .reveal .hidden {
    display: block;

  }
  .header-slider {
    font-size: 25px;
    font-weight: 700;
    color: #000;
    margin: 0;

  }
  .header-slider .header-slider_2 {
    margin: 0;
    padding: 0;
  }
  .header-slider_2 {
    font-style: {{ section.settings.change }}
    ;
    margin: 0;
  }

  .product.slick-slide.slick-active {
    width: 300px !important;
  }
  .product.slick-slide {
    width: 300px !important;
  }
  .slick-dots {
    position: absolute;
    bottom: 2px;
    display: block;
    width: 100%;
    padding: 0;
    list-style: none;
    text-align: center;
  }
  .slick-dots li button:before {
    font-family: 'slick';
    font-size: 20px;
    line-height: 20px;
  }
</style>

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.8/slick.min.js"></script>
<script>
  $('.carousel').slick({
    infinite: true,
    slidesToShow: 3,
    slidesToScroll: 3,
    variableWidth: true,
    speed: 500,
    dots: true
  });
</script>